rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 認証されたユーザーのみアクセス可能
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // ユーザーコレクション
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // 営業目標コレクション
    match /salesTargets/{targetId} {
      allow read, write: if request.auth != null;
    }
    
    // 提案メニューコレクション
    match /proposalMenus/{menuId} {
      allow read, write: if request.auth != null;
    }
    
    // クライアントコレクション
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }
    
    // プロジェクトコレクション
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // アクションログコレクション
    match /actionLogs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // 受注コレクション
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // 実績コレクション
    match /performance/{performanceId} {
      allow read, write: if request.auth != null;
    }
  }
}